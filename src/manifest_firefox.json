{
	"name": "Web to Plex+",
	"description": "Adds a button on various movie & TV show sites to open it in Plex.",
	"manifest_version": 2,
    "version": "0.2",
	"icons": {
		"16": "img/16.png",
		"48": "img/48.png",
		"128": "img/128.png"
	},
	"applications": {
		"gecko": {
		  "id": "{05243336-ce19-46df-95af-680070c96134}",
		  "strict_min_version": "57.0"
		}
	},
	"content_scripts": [
		{
			"matches": ["https://movieo.me/*"],
			"js": ["history-hack.js", "utils.js", "movieo.js"],
			"css": ["movieo.css"]
		},
		{
			"matches": ["*://*.imdb.com/*"],
			"js": ["utils.js", "imdb.js"],
			"css": ["imdb.css"]
		},
		{
			"matches": ["https://trakt.tv/*"],
			"js": ["history-hack.js", "utils.js", "trakt.js"],
			"css": ["trakt.css"]
		},
		{
			"matches": ["https://flenix.co/movies/*"],
			"js": ["utils.js", "flenix.js"],
			"css": ["flenix.css"]
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"options_ui": {
		"page": "options/index.html",
		"chrome_style": true
	},
	"permissions": [
		"storage",
		"http://*/",
		"https://*/"
	]
}
